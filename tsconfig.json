{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "strict": true,
    "outDir": "dist",
    "types": ["node"]
  },
  "include": [
    "netlify/functions/**/*.ts",
    "client/src/**/*.ts",
    "client/src/**/*.tsx"
  ]
}
