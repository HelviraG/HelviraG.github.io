{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./server/dist",
    "allowJs": true,
    "resolveJsonModule": true,
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules", 
    "client", 
    "dist"
  ]
}
